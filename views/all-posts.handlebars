<h2> Current Posts </h2>
{{#each posts as |post|}}
<div class="container">
  <div class="card">
    <div class="card-header">
      {{post.title}}
    </div>
    <div class="card-body">
      <h5 class="card-title">{{post.title}} {{post.uder_id}}</h5>
      <p class="card-text">{{post.content}}</p>
    </div>
  </div>
</div>
{{/each}}



<!-- This is the form for adding a new dish -->
<div class="add-post-container">
  <h2>
    Add a Post:
  </h2>
  <form class="new-post-form">
    <label for="post_title">
      Title:
    </label>
    <br />
    <textarea id="post_title" name="post_title" rows="2" cols="30">
      {{title}}
    </textarea>
    <br />
    <label for="description">
      Comment:
    </label>
    <br />
    <textarea id="comment" name="description" rows="5" cols="30">
      {{comment}}
    </textarea>
    <br />
    <button type="submit" value="Submit">
      Submit
    </button>
  </form>
</div>
</div>

<script src="/js/add-post.js"></script>