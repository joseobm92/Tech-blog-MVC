<div class="container">
    <h2 class="mt-3"> Selected Post </h2>
</div>

<div class="container mt-5">
    <div class="card">
        <div class="card-header">
            {{title}}
        </div>
        <div class="card-body">
            <h5 class="card-title">{{title}} {{user.username}}</h5>
            <p class="card-text">{{content}}</p>
        </div>
    </div>
</div>

{{#if logged_in}}
<div class="container new-post-form mb-5">
<form>
  <div class="form-group">
    <label for="exampleInputEmail1">Comment:</label>
    <input type="" class="form-control" id="titleInput" aria-describedby="emailHelp">
    <small id="emailHelp" class="form-text text-muted">Your comment is going to be public, be gentle!</small>
  </div>
  <button type="submit" class="btn btn-primary">Submit</button>
</form>
</div>
{{/if}}